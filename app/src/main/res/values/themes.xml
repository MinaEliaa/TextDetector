<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TextDetector" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/bluedark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="homeAsUpIndicator">@drawable/icon_arrowback</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="noActionbar" parent="Theme.TextDetector">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.TextDetector.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TextDetector.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TextDetector.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="bottom_nav_bar_theme">

        <item name="android:background">#F5F5F5</item>
    </style>
    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
        <item name= "android:max">60</item>
        <item name="cornerRadius">@dimen/corner_radius_large</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounder_gradient_bourder_new</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/arial_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <dimen name="corner_radius_large" />
</resources>